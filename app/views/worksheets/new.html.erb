<h3>Worksheet erstellen</h3>
<%= form_for @worksheet, :url => worksheets_path, :html => {:class =>"form-horizontal"} do |f|  %> 
<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title, :class => "form-control" %>
</div>
<div class="form-group">
	<%= f.label :max_points %>
	<%= f.text_field :max_points, :class => "form-control" %>
</div>
<div class="form-group">
	<%= f.label :filling_date %>
	<%= f.text_field :filling_date, :class => "form-control", :type => "date" %>
</div>
<div class="form-group">
	<%= f.submit :class=>"btn btn-default" %>
	<%= link_to "Cancel",  worksheets_path %>
</div>
<% end %>