<h2>Sign in</h2>
<%= form_tag sessions_path, :class => "form-horizontal" do %>
<div class="form-group">
	<%= label_tag 'email', nil ,class: "col-sm-2 control-label" %>
	<div class="col-sm-6">
	<%= text_field_tag 'email', nil, class: "col-sm-2 form-control" %></div>
</div>
<div class="form-group">
	<%= label_tag 'password', nil ,class: "col-sm-2 control-label" %>
	<div class="col-sm-6">
	<%= password_field_tag 'password', nil, class: "form-control" %>    </div> 
	 </div>  
	 <div class="form-group">
	 	<div class="col col-sm-offset-2 col-sm-6">
	 		<li class="list-inline">
	 	<%= check_box_tag "remember me" %>
	 	<%= label_tag 'remember me'%>
	 	</li>
	 	</div>
	 </div>
<div class="form-group">
	<div class="col col-sm-offset-2 col-sm-6">
    	<%= submit_tag "Sign in", class: "btn btn-default" %> 
    </div>
</div>  
<% end %>