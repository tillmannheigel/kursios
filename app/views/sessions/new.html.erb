<h2>Log in</h2>
<%= form_tag sessions_path do %>
<div class="form-group">
	<%= f.label :email %>
	<%= f.text_field :email, :class => "form-control" %>
</div>
<div class="form-group">
	<%= f.label :password %>
	<%= f.password_field :password, :class => "form-control" %>
</div>
<p><%= submit_tag "Log in" %></p>
<% end %>