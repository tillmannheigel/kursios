<ol class="breadcrumb">
  <li><%= link_to 'Home', root_path %></li>
  <li><%= link_to 'Kurse', courses_path %></li>
  <li class="active"><%= @course.name %></li>
</ol>

<div class="row">
<div class="col-md-8">
 <h3><%= @course.name %></h3>
</div>
<div class="col-md-4">
	         <%= render 'courses/edit' %>

</div>
</div>
<div class="row">
<% if @course.tutor %>

  <div class="col-md-4">
  	<div class="panel panel-default">
  	<div class="panel-heading">
    <h3 class="panel-title">Tutor</h3>
  </div>
  <div class="panel-body">
  	<%= @course.tutor.email %>
  </div>
</div>
</div>
<% end %>  

<% if @course.students.count > 0 %>

  <div class="col-md-4">
  	<div class="panel panel-default">
  	<div class="panel-heading">
    <h3 class="panel-title">
	Students
	</h3>
  </div>
  <ul class="list-group">
    <% @course.students.each do |c|%>
      	 <li class="list-group-item">
      	 		<%= link_to c.email, student_path(c)  %>
      	 	</li>
        <% end %>
      </ul>
  </div>
</div>
<% end %>  

<% if @course.worksheets.count > 0 %>

  <div class="col-md-4">
  	<div class="panel panel-default">
  	<div class="panel-heading">
    <h3 class="panel-title">Worksheets</h3>
  </div>
  <ul class="list-group">
    <% @course.worksheets.each do |c|%>
      	 <li class="list-group-item">
      	 		<%= link_to c.title, worksheet_path(c)  %>
      	 	</li>
        <% end %>
      </ul>
  </div>
</div>
<% end %>  

