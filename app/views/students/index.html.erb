<ol class="breadcrumb">
  <li><%= link_to 'Home', root_path %></li>
  <li class="active">Students</li>
</ol>
<h3>
	<%if admin_signed_in? %> All Students
	<%else %> Your Mates
	<%end%>
	</h3>
<table class="table">
	<tr class="table-header">
	<th>email</th>
	<th>Nachricht</th>
	<%if admin_signed_in? %>
	<th>last sign_in</th>
	<th>created</th>
	<th>courses</th>
	<th>löschen</th>
	<%end%>
	</tr>

	<% @students.each do |s|%>
	<tr class="table-body">
	<td><%= link_to s.email, student_path(s.id) %></td>
	<td><%= link_to '<i class="glyphicon glyphicon-envelope"></i>'.html_safe,  send_message_path(s.id) %></td>

	<%if admin_signed_in? %>
	<td><%= s.last_sign_in_at %></td>
	<td><%= s.created_at %></td>
	<td><%= s.courses.to_a.count %></td>
	<td><%= link_to '<i class="glyphicon glyphicon-remove" alt="delete"></i>'.html_safe, student_path(s.id),data: {confirm: "Wirklich löschen"}, method: :delete %></td>
	<% end %>
	</tr>
	<% end %>
	</table>
<%if admin_signed_in? %>
	<%= link_to "Anlegen", new_student_path, :class=>"btn btn-default" %>
<%end%>

