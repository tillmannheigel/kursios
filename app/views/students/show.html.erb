<ol class="breadcrumb">
  <li><%= link_to 'Home', root_path %></li>
  <li><%= link_to 'Students', students_path %></li>
  <li class="active"><%= @student.email %></li>
</ol>

 <h3><%= @student.email %></h3>
<div class="row">
<% if courses %>

  <div class="col-md-4">
  	<div class="panel panel-default">
  	<div class="panel-heading">
    <h3 class="panel-title"><%if admin_signed_in?  %>
	Alle 
	<%elsif student_signed_in? %>
	<%if current_student.id == @student.id%>
	Meine
	<%else%>
	Gemeinsame
	<%end%>
	<%end%>
	Kurse</h3>
  </div>
  <ul class="list-group">
    <% courses.each do |c|%>
      	 <li class="list-group-item">
      	 		<%= link_to c.name, course_path(c)  %>
      	 	</li>
        <% end %>
      </ul>
  </div>
</div>
<% end %>  
<div class="col-md-8">
	
</div>
</div>
<div class="row">

<% if admin_signed_in?%>

<button class="btn btn-primary" data-toggle="modal" data-target="#myModal"> Bearbeiten </button>
	<%= form_tag(update_students_courses_path(@student.id), method: 'Patch') do %>
	<%= hidden_field_tag 'dummy_list', 'dummy' %>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Kurs auswählen</h4>
      </div>
      <div class="modal-body">
      	
      	<div class="form-group">
	<%= label_tag :email %>
	<%= text_field_tag :email, @student.email, :class => "form-control" %>
</div>
      	
	<table class="table">
	<tr class="table-header">
	<th>Bezeichnung</th>
	<th>ausgewählt</th>
	</tr>

	<% @all_courses.each do |c|%>
	<tr class="table-body">
	<td><%= c.name %></td>
	<td><%= check_box_tag  'checks[]', c.id, @courses.include?(c)  %></td>
	</tr>
	<% end %>
	</table>     
	 </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Abbrechen</button>
	    <%= submit_tag "Aktualisieren", class: "btn btn-primary" %>
	    <!--<%=button_tag%> --> 
      </div>
      	    <%end %>

    </div>
  </div>
</div>
		<%end%>
</div>
<div class="row">
<p><%= link_to "Zurück", :back %></p>
</div>